<Window x:Class="w2g.desktop.View.Mode.Connect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:w2g.desktop.View.Mode"
        mc:Ignorable="d"
        Title="Connect" Height="450" Width="800" ResizeMode="CanResizeWithGrip" WindowStyle="None" Background="{x:Null}">
    <Border BorderBrush="Black" Background="#1a4645" BorderThickness="1.4" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border CornerRadius="7 7 0 0" Background="#051721" MouseMove="OnWindowDragged">
                <Label Margin="5" Padding="5" Foreground="#f68800" FontWeight="Light" FontSize="17">W2G</Label>
            </Border>
            <Image Cursor="Hand" Margin="10" Height="20" VerticalAlignment="Center" HorizontalAlignment="Right" RenderOptions.BitmapScalingMode="Fant" RenderOptions.EdgeMode="Aliased" Source="/Ressources/x.png" MouseUp="OnApplicationExit"></Image>

            <Grid Grid.Row="1">
                
            </Grid>
        </Grid>
    </Border>
</Window>
